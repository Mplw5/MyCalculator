<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#6B7C6363"/> <!-- 按下时的背景颜色 -->
            <corners android:radius="500dip"/> <!-- 圆角 -->
            <stroke android:width="2dip" android:color="#6B7C6363"/> <!-- 边框 -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000"/> <!-- 默认背景颜色（透明） -->
            <corners android:radius="500dip"/> <!-- 圆角 -->
            <stroke android:width="2dip" android:color="#6B7C6363"/> <!-- 边框 -->
        </shape>
    </item>
</selector>