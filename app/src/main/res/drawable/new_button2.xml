<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#F59FB6"
                android:endColor="#F5D8A8"
                android:angle="90" />
        <corners
            android:radius="500dip"/>
        <padding android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
    </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#CBF6DCA8"
                android:endColor="#D0F699B9"
                android:angle="90" />
        <corners
            android:radius="500dip"/>
        <padding android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
        </shape>
    </item>
</selector>